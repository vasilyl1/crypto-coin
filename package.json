{
  "name": "crypto-coin",
  "version": "1.0.0",
  "description": "App for the beginners thinking to join the crypto world",
  "main": "server/server.js",
  "scripts": {
    "start": "npm run build && cd server && node server.js",
    "server": "cd server nodemon server.js --ignore client",
    "client": "cd client && npm start",
    "develop": "concurrently \"cd server && npm run server\" \"cd client && npm start\"",
    "install": "cd server && npm i && cd ../client && npm i",
    "seed": "cd server && npm run seed",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.4"
  },
  "dependencies": {
    "@stripe/stripe-js": "^1.52.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasilyl1/crypto-coin.git"
  },
  "bugs": {
    "url": "https://github.com/vasilyl1/crypto-coin/issues"
  },
  "homepage": "https://github.com/vasilyl1/crypto-coin#readme"
}
